<%- include('./partials/header') %>
    <% if (success.length > 0) { %>
        <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
            <span class="inline-block mt-1 mb-1 text-white"><%= success %></span>
        </div>
        <% } %>

            <div class="flex flex-col min-h-screen">
                <div class="container flex flex-grow px-10 py-20">
                    <div class="w-[25%] flex h-screen flex-col items-start">
                        <div class="flex flex-col">
                            <a class="block mb-2 w-fit" href="">All Products</a>
                            <a class="block mb-2 w-fit" href="">Create new product</a>
                        </div>
                    </div>
                    <main class="w-3/4 p-8 ml-4 bg-white shadow">
                        <h2 class="mb-4 text-xl font-bold">Create New Product</h2>
                        <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data">
                            <div class="mb-6">
                                <h3 class="mb-2 text-lg font-semibold">Product Details</h3>
                                <div class="mb-4">
                                    <label class="block mb-2 font-medium">Product Image</label>
                                    <input name="image" type="file" class="px-4 py-2 rounded" value="Select File" />
                                </div>
                                <div class="grid grid-cols-2 gap-4">
                                    <input name="name" type="text" placeholder="Product Name" class="w-full p-2 border rounded" />
                                    <input name="price" type="text" placeholder="Product Price" class="w-full p-2 border rounded" />
                                    <input name="discount" type="text" placeholder="Discount Price" class="w-full p-2 border rounded" />
                                </div>
                            </div>

                            <div>
                                <h3 class="mb-2 text-lg font-semibold">Panel Details</h3>
                                <div class="grid grid-cols-2 gap-4">
                                    <input name="bgcolor" type="text" placeholder="Background Color" class="w-full p-2 border rounded" />
                                    <input name="panelcolor" type="text" placeholder="Panel Color" class="w-full p-2 border rounded" />
                                    <input name="textcolor" type="text" placeholder="Text Color" class="w-full p-2 border rounded" />
                                </div>
                            </div>
                            <input class="px-5 py-2 mt-3 text-white bg-blue-500 rounded" type="submit" value="Create New Product" />
                        </form>
                    </main>
                </div>
            </div>

            <%- include('./partials/footer') %>