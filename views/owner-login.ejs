<%- include('./partials/header') %>
<div class="flex w-full h-screen px-20">
  <div class="flex items-center justify-center w-1/2 h-screen">
    <div class="w-full px-32">
      <h4 class="mb-5 text-2xl capitalize">Admin Access</h4>
      <form action="/create" method="post">
        <input
          class="block w-full p-4 px-3 py-2 mb-3 bg-zinc-100"
          type="email"
          placeholder="Email"
          name="email"
        />
        <input
          class="block w-full p-4 px-3 py-2 mb-3 bg-zinc-100"
          type="password"
          placeholder="Password"
          name="password"
        />
        <input
          class="px-5 py-3 mt-2 text-white bg-blue-500 rounded-full"
          type="submit"
          value="Login"
        />
      </form>
    </div>
  </div>
</div>
<%- include('./partials/footer') %>
