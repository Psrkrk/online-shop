<%- include('./partials/header') %> <% if (success.length > 0) { %>
<div
  class="absolute p-3 -translate-x-1/2 -translate-y-1/2 bg-blue-500 rounded-md top-5 left-1/2"
>
  <span class="inline-block mt-1 mb-1 text-white"><%= success %></span>
</div>
<% } %>

<div class="flex items-start w-full h-screen px-20 py-20">
  <div class="w-[25%] flex h-screen flex-col items-start">
    <div class="flex items-center gap-2">
      <h3>Sort by</h3>
      <form action="/shop">
        <select class="border-[1px] px-2 py-1" name="sortby" id="">
          <option value="popular">Popular</option>
          <option value="newest">Newest</option>
        </select>
      </form>
    </div>

    <div class="flex flex-col mt-20">
      <a class="block mb-2 w-fit" href="">New Collection</a>
      <a class="block mb-2 w-fit" href="">All Products</a>
      <a class="block mb-2 w-fit" href="">Discounted Products</a>
    </div>

    <div class="flex flex-col mt-32">
      <a class="block mb-2 w-fit" href="">Filter by :</a>
      <a class="block mb-2 w-fit" href="">Availability</a>
      <a class="block mb-2 w-fit" href="">Discount</a>
    </div>
  </div>

  <div class="w-[75%] flex flex-col gap-5 h-screen">
    <div class="flex items-start gap-5">
      <% product.forEach(function(product){ %>
      <div class="bg-red-500 w-60">
        <div class="w-full bg-yellow-500 h-52">
          <img
            class="object-cover w-full h-full"
            src="data:image/jpeg;base64,<%= product.image %>"
            alt="<%= product.name %>"
          />
        </div>
        <div class="flex items-center justify-between px-4 py-4">
          <div>
            <h3><%= product.name %></h3>
            <h4><%= product.price %></h4>
          </div>
          <a
            class="flex items-center justify-center bg-white rounded-full w-7 h-7"
            href="/addtocart/<%= product._id %>"
          >
            <i class="ri-add-line"></i>
          </a>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
